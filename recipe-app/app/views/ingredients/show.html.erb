<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<h1>Ingredient Show</h1>
<h3> Ingredient Name: <%=@i.name%> </h3>
<h3> Users Allergic to <%=@i.name%>: 
<%if @i.allergens.size == 0%> None<%end%></h3>
<% @i.allergens.each do |a| %>
<h3><a href='/users/<%=a.user.id%>'><%=a.user.name%></a></h3>
<%end%>
<h3> Recipes Included in: </h3>
<% @i.recipes.each do |r| %>
<h3><a href='/recipes/<%=r.id%>'><%=r.name%> </a></h3>
<%end%>
